generator client {
    provider             = "prisma-client-py"
    recursive_type_depth = 5
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id            String   @id @default(uuid())
    name          String   @unique
    hash_password String
    role          String
    img           String
    date          DateTime @default(now())

    @@map("users")
}
